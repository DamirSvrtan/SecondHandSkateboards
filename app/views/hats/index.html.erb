<div id="daske_lista">
<h1 id="naslov1">Kape</h1>
<br/>
<table id="hat_table", class="fixed_table", style="margin-top:-10px;">
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
<tr id="prva_traka", style="height:30px;">
<th>Slika</th>
  <th><%= sortable "marka" %></th>
  <th><%= sortable "koristenost", "Stanje" %></th> 
  <th><%= sortable "velicina", "Velicina" %></th>
  <th><%= sortable "cijena" %></th>
  <th><b>Detalji</b></th>
</tr>
<% for hat in @hats %>
<tr style="border-bottom:thin solid;height:50px;">

<% if hat.slika_file_name %>
<% string_id = add_zeros(hat.id) %>
<% izvor2="/system/hats/slikas/000/000/"+string_id+"/thumb/"+hat.slika_file_name %>
<% else %>
<% izvor2="/images/no photo thumb.png" %>
<% end %>

<td><%= image_tag izvor2, :size => "30x30", :class => "za_povecat" %></td>
<td><%= hat.marka %></td>
<td><%= hat.koristenost %></td>
<td><%= hat.velicina %></td>
<td><%= hat.cijena %></td>
<td><%= link_to "Detalji", hat %></td>
</tr>
<% end %>
</table>
<%= will_paginate @hats %>
</div>
