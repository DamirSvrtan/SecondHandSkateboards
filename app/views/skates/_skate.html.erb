<tr>
	<td class="korisnik_oglas_slika">
		<% if skate.slika_file_name %>
		<% string_id = add_zeros(skate.id) %>
		<% izvor2="/system/skates/slikas/000/000/"+string_id+"/thumb/"+skate.slika_file_name %>
		<% else %>
		<% izvor2="/images/no photo thumb.png" %>	
		<% end %>
		<%= image_tag (izvor2), :id=>"slikica_na_profilu" %>
	</td>
	<td class="korisnik_oglas_info">
		<b>Naslov:</b> <%= skate.naslov %><br>
		<b>Cijena:</b> <%= skate.cijena %>kn<br> 
		<b>Oglas predan:</b> <%= skate.created_at.strftime("%d-%m-%Y") %>
	</td>
	
	<td class="korisnik_oglas_linkovi">
		<%= link_to "Detalji..", skate %><br>
		<% if current_user?(skate.user) %>
			<%= link_to "delete", skate, method: :delete,
 			                                    data: { confirm: "You sure?" },
 			                                    title: skate.naslov %><br>
			<%= link_to "edit", edit_skate_path(skate.id) %>
		<% end %>
	</td>

</tr>
