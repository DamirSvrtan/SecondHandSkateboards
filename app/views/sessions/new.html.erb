<% provide(:title, "Sign in") %>
<div id="kontenjer2">
<h1 id="naslov">Prijava</h1>
</br>

    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "E-mail", id:"session_email_label"%>
      <%= f.text_field :email %>

      <%= f.label :password, "Lozinka", id:"session_password_label" %>
      <%= f.password_field :password %>
	<br/>

      <%= f.submit "Prijavi se", class: "btn btn-large btn-danger", id: "prijavni_gumb" %>
    <% end %>
    <p id="zab_lozinka"><%= link_to "Zaboravljena lozinka?", new_password_reset_path %></p>
    <p id="novi_korisnik">Novi korisnik? <%= link_to "Registriraj se!", signup_path %></p>

</div>
<script>
$('ul#sastrane').hide();
</script>

