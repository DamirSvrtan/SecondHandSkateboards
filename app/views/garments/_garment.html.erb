<tr>
	<td class="korisnik_oglas_slika">
		<% if garment.slika_file_name %>
		<% string_id = add_zeros(garment.id) %>
		<% izvor2="/system/garments/slikas/000/000/"+string_id+"/thumb/"+garment.slika_file_name %>
		<% else %>
		<% izvor2="/images/no photo thumb.png" %>	
		<% end %>
		<%= image_tag (izvor2), :id=>"slikica_na_profilu" %>
	</td>
	<td class="korisnik_oglas_info">
		<b>Naslov:</b> <%= garment.naslov %><br>
		<b>Cijena:</b> <%= garment.cijena %>kn<br> 
		<b>Oglas predan:</b> <%= garment.created_at.strftime("%d-%m-%Y") %>
	</td>
	
	<td class="korisnik_oglas_linkovi">
		<%= link_to "Detalji..", garment %><br>
		<% if current_user?(garment.user) %>
			<%= link_to "delete", garment, method: :delete,
 			                                    data: { confirm: "You sure?" },
 			                                    title: garment.marka %><br>
			<%= link_to "edit", edit_garment_path(garment.id) %>
		<% end %>
	</td>

</tr>
