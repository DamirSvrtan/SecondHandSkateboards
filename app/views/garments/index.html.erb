<table id="garment_table", class="fixed_table", style="margin-top:-10px;">
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
<tr id="prva_traka", style="height:30px;">
  <th>Slika</th>
  <th><%= sortable "vrsta" %></th>
  <th><%= sortable "marka" %></th>
  <th><%= sortable "koristenost", "Stanje" %></th> 
  <th><%= sortable "velicina", "Velicina" %></th>
  <th><%= sortable "cijena" %></th>
  <th><b>Detalji</b></th>
</tr>
<% for garment in @garments %>
<tr style="border-bottom:thin solid;height:50px;">

<% if garment.slika_file_name %>
<% string_id = add_zeros(garment.id) %>
<% izvor2="/system/garments/slikas/000/000/"+string_id+"/thumb/"+garment.slika_file_name %>
<% else %>
<% izvor2="/images/no photo thumb.png" %>
<% end %>

<td><%= image_tag izvor2, :size => "30x30", :class => "za_povecat" %></td>

<td><%= garment.vrsta %></td>
<td><%= garment.marka %></td>
<td><%= garment.koristenost %></td>
<td><%= garment.velicina %></td>
<td><%= garment.cijena %></td>
<td><%= link_to "Detalji", garment %></td>
</tr>
<% end %>
</table>
<%= will_paginate @garments %>
</div>
