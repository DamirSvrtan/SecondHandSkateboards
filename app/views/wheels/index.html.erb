<div id="daske_lista">
<h1 id="naslov1">Kotači</h1>
<br/>
<table id="wheel_table", class="fixed_table", style="margin-top:-10px;">
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
<tr id="prva_traka", style="height:30px;">
  <th>Slika</th>
  <th><%= sortable "marka" %></th>
  <th><%= sortable "koristenost", "Stanje" %></th> 
  <th><%= sortable "radijus", "Radijus" %></th>
  <th><%= sortable "cijena" %></th>
  <th><b>Detalji</b></th>
</tr>
<% if @wheels.any? %>
<% for wheel in @wheels %>
<tr style="border-bottom:thin solid;height:50px;">
<% if wheel.slika_file_name %>
<% string_id = add_zeros(wheel.id) %>
<% izvor2="/system/wheels/slikas/000/000/"+string_id+"/thumb/"+wheel.slika_file_name %>
<% else %>
<% izvor2="/images/no photo thumb.png" %>
<% end %>

<td><%= image_tag izvor2, :size => "30x30", :class => "za_povecat" %></td>
<td><%= wheel.marka %></td>
<td><%= wheel.koristenost %></td>
<td><%= wheel.radijus %></td>
<td><%= wheel.cijena %></td>
<td><%= link_to "Detalji", wheel %></td>
</tr>
<% end %>
</table>
<%= will_paginate @wheels %>
<% else %>
<% end %>
</div>
