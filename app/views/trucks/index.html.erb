<div id="daske_lista">
<h1 id="naslov">Osovine</h1>
<br/>
<table id="truck_table", class="fixed_table", style="margin-top:-10px;">
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
    <col width="100px" />
<tr id="prva_traka", style="height:30px;">
  <th>Slika</th>
  <th><%= sortable "marka" %></th>
  <th><%= sortable "koristenost", "Stanje" %></th> 
  <th><%= sortable "sirina1", "Sirina" %></th>
  <th><%= sortable "visina", "Visina" %></th>
  <th><%= sortable "cijena" %></th>
  <th><b>Detalji</b></th>
</tr>
<% for truck in @trucks %>
<tr style="border-bottom:thin solid;height:50px;">

<% if truck.slika_file_name %>
<% string_id = add_zeros(truck.id) %>
<% izvor2="/system/trucks/slikas/000/000/00"+truck.id.to_s+"/thumb/"+truck.slika_file_name %>
<% else %>
<% izvor2="/images/no photo thumb.png" %>
<% end %>

<td><%= image_tag izvor2, :size => "30x30" %></td>
<td><%= truck.marka %></td>
<td><%= truck.koristenost %></td>
<td><%= truck.sirina1 %></td>
<td><%= truck.visina %></td>
<td><%= truck.cijena %></td>
<td><%= link_to "Detalji", truck %></td>
</tr>
<% end %>
</table>
<%= will_paginate @trucks %>
</div>
