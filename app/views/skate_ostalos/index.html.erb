<div id="daske_lista">
<h1 id="naslov">Ostala skate oprema</h1>
<br/>
<table id="skate_ostalo_table", class="fixed_table", style="margin-top:-10px;">
    <col width="200px" />
    <col width="200px" />
    <col width="200px" />
    <col width="200px" />
<tr id="prva_traka", style="height:30px;">
  <th>Slika</th>
  <th><%= sortable "naslov" %></th>
  <th><%= sortable "cijena" %></th>
  <th><b>Detalji</b></th>
</tr>
<% for skate_ostalo in @skate_ostalos %>
<tr style="border-bottom:thin solid;height:50px;">


<% if skate_ostalo.slika_file_name %>
<% string_id = add_zeros(skate_ostalo.id) %>
<% izvor2="/system/skate_ostalos/slikas/000/000/"+string_id+"/thumb/"+skate_ostalo.slika_file_name %>
<% else %>
<% izvor2="/images/no photo thumb.png" %>
<% end %>

<td><%= image_tag izvor2, :size => "30x30", :class => "za_povecat" %></td>

<td><%= skate_ostalo.naslov %></td>
<td><%= skate_ostalo.cijena %></td>
<td><%= link_to "Detalji", skate_ostalo %></td>
</tr>
<% end %>
</table>
<%= will_paginate @skate_ostalos %>
</div>
