		<div id="15" class="okviri">
			<img src="/images/skateboard/ostalo.png" style="position: absolute;left:23px;top:10px;">
		</div>

	</div>

	<div id="male_ikone_clothing">
		<div id="21" class="okviri">
			<img src="/images/clothing/odjeca.png" style="position: absolute;left:23px;top:3px;">
