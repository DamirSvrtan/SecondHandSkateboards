<%= link_to "Sign Up!", 'sign_up' %>
<% end %>
<script>


$('ul#sastrane').hide();
$('#predaj_oglas').hide();
$('#clothing_hover').hide();
$('.obrasci').hide();

$('#male_ikone_clothing').hide();


var a="";
$('#skate').click(function(){
	 		$('#clothing_hover').hide();
	 		$('#skate_hover').show();
			$('#male_ikone_skate').show();
			$('#male_ikone_clothing').hide();
	 		})
$('#clothing').click(function(){
	 		$('#clothing_hover').show();
	 		$('#skate_hover').hide();
			$('#male_ikone_skate').hide();
			$('#male_ikone_clothing').show();
	 		})
$('.okviri').click(function(){
			$(this).css({'background-color' : '#ECC5A8' });
			$(this).siblings().css({'background-color' : 'inherit' });
			})
$('#11').click(function(){
			a="daske";
			})
$('#12').click(function(){
			a="kotaci";
			})
$('#13').click(function(){
			a="osovine";
			})
$('#14').click(function(){
			a="skate_kompleti";
			})
$('#15').click(function(){
			a="skate_ostalo";
			})
$('#21').click(function(){
			a="odjeca";
			})
$('#22').click(function(){
			a="tenisice";
			})
$('#23').click(function(){
			a="kape";
			})
$('#24').click(function(){
			a="ostalo";
			})
$('button#predaj_oglas_').click(function(){
			var prikazi_obrazac="#obrasci_"+a;
			$(prikazi_obrazac).siblings('.obrasci').hide();
			$(prikazi_obrazac).show();
		
			})




</script>

